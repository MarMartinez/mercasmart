<Window x:Class="mercasmartWPF.MontarListaCompra"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ListaCompraSupermercado" Height="539" Width="798" Loaded="ListaCompraSupermercado_Loaded">
    <Grid>
        <DataGrid AutoGenerateColumns="False" Height="321" HorizontalAlignment="Left" Margin="37,53,0,0" Name="dgridProductos" VerticalAlignment="Top" Width="290" />
        <ComboBox Height="23" HorizontalAlignment="Right" Margin="0,14,457,0" Name="cboxProductos" VerticalAlignment="Top" Width="194" SelectionChanged="cboxProductos_SelectionChanged"/>
        <Label Content="Producto: " Height="38" HorizontalAlignment="Left" Margin="37,9,0,0" Name="label1" VerticalAlignment="Top" FontSize="16" />
        <Button Content=">>" Height="54" HorizontalAlignment="Left" Margin="367,129,0,0" Name="btnAgregarProducto" VerticalAlignment="Top" Width="62" FontSize="16" Click="btnAgregarProducto_Click" />
        <Button Content="&lt;&lt;" Height="54" HorizontalAlignment="Left" Margin="367,245,0,0" Name="btnEliminarProducto" VerticalAlignment="Top" Width="62" FontSize="16" />
        <ListView Height="321" HorizontalAlignment="Left" Margin="472,53,0,0" Name="lViewListaProductos" VerticalAlignment="Top" Width="271">
            <ListView.View>

                <GridView AllowsColumnReorder="true"
              ColumnHeaderToolTip="Productos Seleccionados por el usuario">

                    <GridViewColumn DisplayMemberBinding=
                          "{Binding Path=nombreProducto}" 
                      Header="Nombre" Width="170"/>

                    <GridViewColumn DisplayMemberBinding=
                          "{Binding Path=cantidad}" 
                      Header="Cantidad" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Calcular precio por establecimiento" Height="40" HorizontalAlignment="Left" Margin="266,421,0,0" Name="button1" VerticalAlignment="Top" Width="267" FontSize="16" Background="#AAF21313" BorderBrush="#FFB10000" Foreground="#FFB10000" />
    </Grid>
</Window>
