<Window x:Class="mercasmartWPF.ListaCompra.PrecioListaPorEstablecimiento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PrecioListaPorEstablecimiento" Height="270" Width="718">
    <Grid>
        <ListView HorizontalAlignment="Left" Name="listProductosSeleccionadas" VerticalAlignment="Top" Width="696" Height="137">
            <ListView.View>

                <GridView AllowsColumnReorder="true"
              ColumnHeaderToolTip="Productos Seleccionados por el usuario">

                    <GridViewColumn DisplayMemberBinding=
                          "{Binding Path=tipoProducto}" 
                      Header="Establecimiento" />

                    <GridViewColumn DisplayMemberBinding=
                          "{Binding Path=nombreProducto}" 
                      Header="Precio" />

                    <GridViewColumn DisplayMemberBinding=
                          "{Binding Path=marcaProducto}" 
                      Header="Productos no disponibles" />
                </GridView>

            </ListView.View>
        </ListView>
    </Grid>
</Window>
